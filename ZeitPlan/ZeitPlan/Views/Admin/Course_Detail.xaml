<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZeitPlan.Views.Admin.Course_Detail" Title="Course Detail">
    <ContentPage.Content>
        <ScrollView Orientation="Vertical">
            <StackLayout Padding="24" >
                
                <Grid ColumnDefinitions="100,*" VerticalOptions="Center" HorizontalOptions="Center"  RowDefinitions="*" Grid.ColumnSpan="2" Grid.RowSpan="3" >
                    <Label Grid.Row="0"   FontAttributes="Bold" Grid.Column="0" BackgroundColor="LightBlue"  Text="CourseID:"/>
                    <Label Grid.Row="0" Grid.Column="1"  BackgroundColor="LightGray"  x:Name="CourseID"/>
                    <Label BackgroundColor="LightBlue"    FontAttributes="Bold" Grid.Row="1"  Grid.Column="0" Text="CourseName:"/>
                    <Label Grid.Row="1"   BackgroundColor="LightGray" Grid.Column="1" x:Name="CourseName"/>
                    <Label Grid.Row="2"    FontAttributes="Bold" Grid.Column="0" BackgroundColor="LightBlue"   Text="CreditHours:"/>
                    <Label Grid.Row="2" Grid.Column="1"  BackgroundColor="LightGray"  x:Name="CreditHours"/>

                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>